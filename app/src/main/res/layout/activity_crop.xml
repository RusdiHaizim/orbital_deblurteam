<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mid"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.theartofdev.edmodo.cropper.CropImageView xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cropImageView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_weight="1"
        custom:cropAspectRatioX="1"
        custom:cropAspectRatioY="1"
        custom:cropMinCropResultHeightPX="1"
        custom:cropMinCropResultWidthPX="1" />

    <Button
        android:id="@+id/finishedCroppingButton"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:text="DEBLUR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>