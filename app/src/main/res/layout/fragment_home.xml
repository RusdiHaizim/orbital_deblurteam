<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgbef"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.ufo.orbital.HomeFragment">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="?android:attr/windowBackground"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:text="SUPERES"
        android:textAlignment="gravity"
        android:textColor="#070505"
        android:textSize="57sp"
        android:tooltipText="No, we did spell it right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/cameraButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:focusable="true"
        android:background="@android:drawable/list_selector_background"
        android:tooltipText="Take Picture from Camera"
        app:srcCompat="@drawable/camf" />

    <ImageButton
        android:id="@+id/uploadButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:drawable/list_selector_background"
        android:tooltipText="Take Picture from Gallery"
        app:srcCompat="@drawable/image_foreground" />

    <ImageView
        android:id="@+id/sun"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:tooltipText="Praise the Sun!"
        app:layout_constraintEnd_toEndOf="@+id/appTitle"
        app:layout_constraintTop_toTopOf="@+id/appTitle"
        app:srcCompat="@drawable/sun" />

    <ImageView
        android:id="@+id/mountain"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:tooltipText="I am the Mountain"
        app:layout_constraintStart_toStartOf="@+id/appTitle"
        app:layout_constraintTop_toTopOf="@+id/appTitle"
        app:srcCompat="@drawable/deblur_icon" />

    <ImageButton
        android:id="@+id/btn_feedback"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/list_selector_background"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:tooltipText="Send Your Feedback!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appTitle"
        app:srcCompat="@drawable/msg_foreground" />

</android.support.constraint.ConstraintLayout>